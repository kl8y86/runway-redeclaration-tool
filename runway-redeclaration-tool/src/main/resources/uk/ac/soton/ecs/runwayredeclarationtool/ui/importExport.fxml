<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.soton.ecs.runwayredeclarationtool.ui.ImportExportController">
   <children>
      <HBox alignment="CENTER" prefHeight="240.0" prefWidth="320.0">
         <children>
            <VBox alignment="CENTER" prefHeight="240.0" prefWidth="300.0">
               <children>
                  <Text fx:id="SuggestionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Input FIle Name:" wrappingWidth="298.0">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin></Text>
                  <TextField fx:id="fileField" promptText="Enter file name (*.xml)" text=".xml">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                  <HBox alignment="TOP_CENTER" prefHeight="42.0" prefWidth="300.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#submitImport" prefHeight="60.0" prefWidth="100.0" text="Import" />
                        <Button mnemonicParsing="false" onAction="#submitExport" prefHeight="60.0" prefWidth="100.0" text="Export">
                           <HBox.margin>
                              <Insets left="60.0" />
                           </HBox.margin></Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
